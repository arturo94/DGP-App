<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:screenOrientation="portrait"
    tools:context="com.example.arturo.cajagranada3.nueva">


    <Button
        android:id="@+id/scan"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:background="@drawable/buttonbg"
        android:contentDescription="Escanear el código q r"
        android:paddingLeft="25dp"
        android:paddingStart="25dp"
        android:text="Escanear el código"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageIntro"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/imagen_de_caja_granada_fundaci_n"
        android:scaleType="fitStart"
        android:src="@drawable/fondo3" />

    <TextView
        android:id="@+id/textLabel_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageIntro"
        android:layout_marginTop="26dp"
        android:paddingLeft="20dp"
        android:text="Instrucciones:"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textLabel_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textLabel_0"
        android:layout_marginTop="13dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Lea el código que se encuentra al reverso de su ticket de entrada para usar la aplicación"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textLabel_1"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="En la esquina inferior derecha de su tiquet de entrada esta el código Qr necesario para entrar a la aplicación."
        android:cropToPadding="false"
        app:srcCompat="@drawable/tiquet" />

</RelativeLayout>
